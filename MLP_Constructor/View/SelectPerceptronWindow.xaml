<Window x:Class="MLP_Constructor.View.SelectPerceptronWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MLP_Constructor.View"
        mc:Ignorable="d"
        Title="OpenFileWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"></RowDefinition>
            <RowDefinition Height="378*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">Выбор нейросети</TextBlock>
        <ScrollViewer   Grid.Row="1" VerticalScrollBarVisibility="Visible">
                <StackPanel x:Name="perceptronsContainer" Grid.Column="0">
                </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
