<Window x:Class="MLP_Constructor.View.PerceptronNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MLP_Constructor.View"
        mc:Ignorable="d"
        Title="Ввод имени" Height="300" Width="450">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Height="88" Margin="60,18,60,13">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Margin="10,1,10,1">Введите имя персептрона:</TextBlock>
        <TextBox Grid.Row="1" Name="nameBox" Margin="10,1,10,1"></TextBox>
        <TextBlock x:Name="error" Foreground="Red" Grid.Row="2" Margin="10,1,10,1">Имя не может быть пустым</TextBlock>
        <Button x:Name="nameButton" Grid.Row="3" Margin="10,0,10,0">Назвать</Button>
    </Grid>
</Window>
